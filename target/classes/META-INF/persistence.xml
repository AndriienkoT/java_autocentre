<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="Main" transaction-type="RESOURCE_LOCAL">
        <class>ua.lviv.logos.entity.Car</class>
        <class>ua.lviv.logos.entity.AutoType</class>
        <class>ua.lviv.logos.entity.PartsAndAccessories</class>
        <class>ua.lviv.logos.entity.TechSupport</class>
        <class>ua.lviv.logos.entity.Financing</class>
        <class>ua.lviv.logos.entity.Users</class>
        <class>ua.lviv.logos.entity.MyOrder</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost/autocenter"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>