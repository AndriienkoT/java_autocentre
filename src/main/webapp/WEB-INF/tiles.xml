<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="base.definition" template="/views/tiles/layout.jsp">
        <put-attribute name="header" value="/views/tiles/header.jsp"/>
        <put-attribute name="menu" value="/views/tiles/menu.jsp"/>
        <put-attribute name="body" value=""/>
        <put-attribute name="footer" value="/views/tiles/footer.jsp"/>
    </definition>

    <definition name="autoType-*" extends="base.definition">
        <put-attribute name="body" value="/views/{1}.jsp"/>
        <put-attribute name="title" value="{1} auto type"/>
    </definition>

    <definition name="car-*" extends="base.definition">
        <put-attribute name="body" value="/views/{1}.jsp"/>
        <put-attribute name="title" value="{1} car"/>
    </definition>

    <definition name="financing-*" extends="base.definition">
        <put-attribute name="body" value="/views/{1}.jsp"/>
        <put-attribute name="title" value="{1} financing"/>
    </definition>

    <definition name="myOrder-*" extends="base.definition">
        <put-attribute name="body" value="/views/{1}.jsp"/>
        <put-attribute name="title" value="{1} my order"/>
    </definition>

    <definition name="partsAndAccessories-*" extends="base.definition">
        <put-attribute name="body" value="/views/{1}.jsp"/>
        <put-attribute name="title" value="{1} parts and accessories"/>
    </definition>

    <definition name="techSupport-*" extends="base.definition">
        <put-attribute name="body" value="/views/{1}.jsp"/>
        <put-attribute name="title" value="{1} techSupport"/>
    </definition>

    <definition name="user-*" extends="base.definition">
        <put-attribute name="body" value="/views/{1}.jsp"/>
        <put-attribute name="title" value="{1} user"/>
    </definition>

    <definition name="home" extends="base.definition">
        <put-attribute name="body" value="/views/home.jsp"/>
        <put-attribute name="title" value="home"/>
    </definition>
</tiles-definitions>